<h1>Log in</h1>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end %>
<div class="form-group">
<%= form_tag login_path do %>
<%= label_tag :email %>
  <%= email_field_tag :email, nil, autofocus: true, class: "form-control", placeholder: "Enter email"%>
</div>
<div class="form-group">
  <%= label_tag :password %>
  <%= password_field_tag :password,nil, class: "form-control", placeholder: "Password" %>
</div>
  <%= submit_tag "Sign in", class: "btn btn-primary" %>
<% end %>
