<div class="wrap-login100">

  <div class="login100-more">

  </div>

<div class="login100-form">
<span class="login100-form-title">Sign Up</span>



      <% if @user.errors.any? %>
        <ol>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ol>
      <% end %>

<%= form_for @user do |f| %>
<div class="form-group">
  <%= f.email_field :email, :required => true,placeholder:"Email", class: "form-control"  %>
</div>
<div class="form-group">

  <%= f.password_field :password, placeholder:"Password", class: "form-control" %>
</div>
<div class="form-group">

  <%= f.password_field :password_confirmation, placeholder:"Password confirmation", class: "form-control" %>

  </div>

<%= f.submit "Sign up", class:"login100-form-btn"%>
</div>
</div>


<% end %>
