<h1 class="allPlayers">All Players</h1>
<div class="table-responsive-lg">
  <table class="table table-striped table-hover"" id="players">
    <thead class="thead-dark">

     <tr>
       <th scope="col"></th>
       <th scope="col">Name</th>
       <th scope="col">Nationality</th>
       <th scope="col">Club</th>
       <th scope="col">Market Value</th>
       <th scope="col">Position</th>
       <th scope="col">DOB</th>
     </tr>
   </thead>

    <tbody>
      <% @players.each do |player| %>

        <tr>
          <td scope="col"><%= image_tag player.image, :class => 'tiny'%></td>
          <td scope="col"><%= link_to player.name, player_path(player.id) %></td>
          <td scope="col"><%= player.nationality %></td>
          <td scope="col"><%= player.club.try(:name) %> <%= image_tag(player.club.image,  :class =>'tiny')if player.club.present? %></td>

          <td scope="col"><%= number_to_currency player.market_value, :unit => 'â‚¬'  %></td>
          <td scope="col"><%= player.position %></td>
          <td scope="col"><%= player.dob.strftime '%e, %B,  %Y' if player.dob.present? %></td>


        </tr>
        <% end %>

    </tbody>
</table>
</div>
