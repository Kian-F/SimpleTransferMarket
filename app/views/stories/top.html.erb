 <% @stories.each do |story| %>
<div class="d-md-flex flex-md-equal w-100 my-md-3 pl-md-3">
 
  <div class="bg-light mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden">
    <div class="my-3 p-3">
      <h2 class="display-5"><%= story['title'].text-uppercase %></h2>
      <p class="lead"><%= story['source']['name'] %></p>
    </div>
    <% if story["urlToImage"].present?  %>
    
    <div class="bg-dark shadow-sm mx-auto" style="width: 80%; height: 300px; border-radius: 21px 21px 0 0;">
    <img class="card-img-top"  <%= image_tag story["urlToImage"]%>
     <% end %></div>
     <a class="btn btn-primary" href="<%= story['url'] %>">Read The Story</a>
     <p style='color:white'><%= Date.parse(story['publishedAt'])%></p>
  </div>
</div>
<% end %>


