<!DOCTYPE html>
<html>
  <head>

    <title>Transfer Market</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>



    <%= stylesheet_pack_tag 'styles', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= cloudinary_js_config %>
  </head>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
      <div class="inner">
        <a class="masthead-brand" href:<%= link_to "", root_path %>STM</a>
        <nav class="nav nav-masthead justify-content-center">
        
          <a class="nav-link active" href:<%= link_to "Home", root_path %></a>
          <a class="nav-link" href:<%= link_to "All Players", players_path %></a>
          <% if @current_user.present? %>
            <% if @current_user.admin? %>
              <a class="nav-link" href:<%= link_to "All Users", users_path %></a>
            <% else %>
              <a class="nav-link" href:<%= link_to "My Players", my_players_path %></a>
              <a class="nav-link" href:<%= link_to "New Player", new_player_path %></a>
            <% end %>
              <a class="nav-link" href:<%= link_to "Log out #{ @current_user.email }", login_path, :method => 'delete' %></a>
          <% else %>
            <a class="nav-link" href:<%= link_to "Agent's Sign up", new_user_path %></a>
            <a class="nav-link" href:<%= link_to "Log in", login_path %></a>

          <% end %>


          <form class="form-inline mt-2 mt-md-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </nav>

      </div>

      </div>
    </nav>
  <%= yield %>


  </body>
</html>
